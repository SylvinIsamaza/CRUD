<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" >
            <input type="text" name="name"  placeholder="Isamaza" id="name" value="">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            
            <input type="text" name="email" placeholder="Isamaza@gmail.com" id="email" value="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <label for="male">Male</label>
                <input type="radio" name="gender" value="male" id="male">
    
            </div>
            <div class="radio inline">
                <label for="female">Female</label>
                <input type="radio" name="gender" value="female" id="female">
    
            </div>
    
            
        </div>
        <div class="form-group">
            <label for="status" class="text-light">status</label>
            <div class="radio inline">
                <label for="active">active</label>
                <input type="radio" name="status" value="active" id="male">
    
            </div>
            <div class="radio inline">
                <label for="inactive">Inactive</label>
                <input type="radio" name="status" value="inactive" id="female">
    
            </div>
    
            
        </div>
        <div class="form-group">
            <input type="submit" class="btn text-dark update" value="save">
                </div>
    </div>
</form>
