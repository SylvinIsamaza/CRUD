<%-include('include/header') %>


<main class="site-main">
<div class="container">
    <div class="box-nav d-flex justify-between border">
        <div class="filter">
        <a href="/" class="border-shadow">
            <span class="text-gradient"> All user
                <img src="images/icons/peer.png">
            </span>
       </a>
    </div>
    </div>
    <div class="form-title text-center">
        <h2 class="text-dark">Update user</h2>
        <span class="text-light">Use below form to create a new account</span>
    </div>
    <form  action="http://localhost:5000/api/users/update/<%=users._id%>" method="post" id="update_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="<%=users._id %>" id="id">
                <input type="text" name="name"  placeholder="Isamaza" id="name" value="<%=users.name %>">
            </div>
            <div class="form-group">
                <label for="email" class="text-light">Email</label>
                
                <input type="text" name="email" placeholder="Isamaza@gmail.com" id="email" value="<%=users.email %>">
            </div>
            <div class="form-group">
                <label for="gender" class="text-light">Gender</label>
                <div class="radio inline">
                    <label for="male">Male</label>
                    <input type="radio" name="gender" value="male" id="gender" <%=users.gender=='male'?'checked':''%>>
        
                </div>
                <div class="radio inline">
                    <label for="female">Female</label>
                    <input type="radio" name="gender" value="female" id="gender" <%=users.gender=='female'?'checked':''%>>
        
                </div>
        
                
            </div>
            <div class="form-group">
                <label for="status" class="text-light">status</label>
                <div class="radio inline">
                    <label for="active">active</label>
                    <input type="radio" name="status" value="active" id="status"<%=users.status=='active'?'checked':''%>>
        
                </div>
                <div class="radio inline">
                    <label for="inactive">Inactive</label>
                    <input type="radio" name="status" value="inactive" id="status"<%=users.status=='inactive'?'checked':''%>>
        
                </div>
        
                
            </div>
            <div class="form-group">
                <input type="submit" class="btn text-dark update" value="save">
                    </div>
        </div>
    </form>
    
</div>
</main>
<%-include('include/footer') %>


